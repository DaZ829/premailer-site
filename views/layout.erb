</div>
<div id="wrap">
<div class="container">
  <div class="content">

    <%= yield %>
  </div>
  </div>
  <script type="text/javascript" src="http://dialect.ca/inc/jquery-1.2.6.min.js"></script>
  <script type="text/javascript">
    $(document).ready(function () {
      $('#process_html').hide();
      $('#process_url_label').click(function () {
        $('#process_url').show();
        $('#process_html').hide();
        $('#content_source').val('url');
      });

      $('#process_html_label').click(function () {
        $('#process_url').hide();
        $('#process_html').show();
        $('#content_source').val('html');
      });

    
    
      $('.premailer_output').click(function () {
        $('.premailer_output').height('auto');
        $(this).height(400);
      
      });
    });
  </script>

  <script src="/inc/code_highlighter.js" type="text/javascript"></script>
  <script src="/inc/code_highlighter_js.js" type="text/javascript"></script>

